{
  "name": "@readyfor/storycapture",
  "version": "10.0.0",
  "description": "A Storybook addon, Save the screenshot image of your stories! via puppeteer.",
  "engines": {
    "node": ">=24"
  },
  "type": "module",
  "main": "lib-esm/index.js",
  "module": "lib-esm/index.js",
  "exports": {
    ".": {
      "import": "./lib-esm/index.js",
      "default": "./lib-esm/index.js"
    },
    "./register": "./register.js"
  },
  "sideEffects": [
    "./register.js",
    "./lib-esm/client/register.js"
  ],
  "typings": "lib-esm/index.d.ts",
  "bin": {
    "storycapture": "lib-esm/node/cli.js"
  },
  "scripts": {
    "clean": "rimraf -g lib-esm \"*.tsbuildinfo\"",
    "build": "tsup",
    "prepare": "yarn clean && yarn build",
    "test": "jest",
    "typedoc": "typedoc --out \"../../dist-pages/typedoc/storycapture\" --ignoreCompilerErrors --tsconfig tsconfig.build.json src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huuyafwww/storycapture.git"
  },
  "author": "tsuyoshiwada",
  "contributors": [
    "Yosuke Kurami"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/huuyafwww/storycapture/issues"
  },
  "homepage": "https://github.com/huuyafwww/storycapture#readme",
  "files": [
    "lib-esm",
    "assets",
    "CONTRIBUTING.md",
    "MIGRATION.md",
    "README.md",
    "LICENSE",
    "package.json",
    "register.js"
  ],
  "keywords": [
    "storybook",
    "addon",
    "puppeteer",
    "chrome",
    "screenshot",
    "capture",
    "visual-testing",
    "storybook-addon",
    "testing",
    "test"
  ],
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/mkdirp": "^2.0.0",
    "@types/node": "^24.0.0",
    "@types/wait-on": "^5.0.0",
    "@types/yargs": "^17.0.0",
    "jest": "29.7.0",
    "minimist": "1.2.8",
    "puppeteer": "23.11.1",
    "ts-jest": "29.2.5",
    "tsup": "^8.5.0",
    "typedoc": "0.27.6",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "mkdirp": "^3.0.0",
    "nanomatch": "^1.2.13",
    "puppeteer-core": "^9.0.0",
    "rimraf": "^6.0.0",
    "sanitize-filename": "^1.6.3",
    "storycrawler": "^5.0.1",
    "yargs": "^17.0.0"
  },
  "peerDependencies": {
    "storybook": "^10.0.0"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": false,
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx)",
      "**/*.test.(ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "_old/.*",
      "examples/.*",
      "\\.d\\.ts$",
      "lib-esm/.*"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost"
    }
  }
}
